{
    "compilerOptions": {
      "declaration": true,
      "noImplicitAny": true,
      "target": "es5",
      "module": "es6",
      "moduleResolution": "node",
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "downlevelIteration": true,
      "lib": ["es6", "dom"],
      "baseUrl": ".",
      "outDir": "./es"
    },
    "include": ["./src/**/*"],
    "exclude": ["**/__tests__", "node_modules"]
  }
  